{
  "manifest_version": 3,
  "name": "BigQuery Cost Estimator",
  "version": "1.0",
  "description": "Displays the estimated cost of BigQuery queries in the console.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://console.cloud.google.com/bigquery*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {}
}